[alias]
        # svn like aliases
        st = status
        s = status -sb
        ls = ls-files
        # quick and dirty push/pull to origin
        put = push origin master
        pul = pull --rebase origin master
        # oops
        fix = commit --amend -C HEAD
        undopush = push -f origin HEAD^:master
        # where am i?
        marco = branch --merged
        polo = branch -a
        # Open ended commands
        ci = commit -m
        co = checkout
        br = branch
        # fast commit
        cm = commit -a -m
        # fast log
        lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -n
        # fast branch (create)
        go = checkout -B

[apply]
        # Detect whitespace erres when applying a patch
        whitespace = fix
[core]
        # use custom .gitignore and .gitattributes
        excludesfile = ~/.config/git/.gitignore
        attributiesfile = ~/.config/git/.gitattributes
        editor = emacs -nw

[color]
        # use colors in commands capable of colored output
        ui = auto
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan
[merge]
        # include summaries of merged commits in newly created merge commit messages
        log = true
        tool = opendiff
[mergetool]
        keepBackup = true

# Use 'origin' as the default remote on the 'master' branch in all cases
[branch "master"]
        remote = origin
        merge = refs/heads/master

# URL shorthands
[url "git@github.com:"]
     insteadOf = "gh:"
     pushInsteadOf = "github:"
     pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
     insteadOf = "github:"
[url "git@gist.github.com:"]
     insteadOf = "gst:"
     pushInsteadOf = "gist:"
     pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
     insteadOf = "gist:"

[filter "lfs"]
     clean = git-lfs clean -- %f
     smudge = git-lfs smudge -- %f
     process = git-lfs filter-process
     required = true
[hub]
     protocol = ssh
[pull]
     rebase = true
